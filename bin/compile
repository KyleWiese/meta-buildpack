#!/usr/bin/env ruby
# Encoding: utf-8
# bin/compile <build-dir> <cache-dir> <env-dir>

build_dir = ARGV[0]
cache_dir = ARGV[1]
env_dir   = ARGV[2]

$stdout.sync = true
$stderr.sync = true

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require "decorator"

compile(build_dir, cache_dir, env_dir)
